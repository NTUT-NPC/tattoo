{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", "schedule:monthly"],
  "timezone": "Asia/Taipei",
  "lockFileMaintenance": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchPackageNames": ["dart"],
      "enabled": false
    },
    {
      "matchManagers": ["pub"],
      "groupName": "Flutter dependencies",
      "groupSlug": "flutter"
    },
    {
      "matchManagers": ["mise"],
      "groupName": "Development tools",
      "groupSlug": "dev-tools"
    },
    {
      "matchFileNames": ["android/**"],
      "groupName": "Android dependencies",
      "groupSlug": "android"
    },
    {
      "matchFileNames": ["ios/**"],
      "groupName": "iOS dependencies",
      "groupSlug": "ios"
    },
    {
      "matchFileNames": [".github/**", "Gemfile", "doc/Dockerfile"],
      "groupName": "CI dependencies",
      "groupSlug": "ci"
    }
  ]
}
