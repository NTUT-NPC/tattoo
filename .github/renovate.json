{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":maintainLockFilesDisabled",
    "schedule:monthly"
  ],
  "timezone": "Asia/Taipei",
  "packageRules": [
    {
      "matchPackageNames": ["dart", "dev.flutter.flutter-plugin-loader"],
      "enabled": false
    },
    {
      "matchManagers": ["pub"],
      "groupName": "Flutter dependencies",
      "groupSlug": "flutter",
      "rangeStrategy": "replace"
    },
    {
      "matchManagers": ["mise"],
      "groupName": "Development tools",
      "groupSlug": "dev-tools"
    },
    {
      "matchFileNames": ["android/**"],
      "groupName": "Android dependencies",
      "groupSlug": "android"
    },
    {
      "matchFileNames": ["ios/**"],
      "groupName": "iOS dependencies",
      "groupSlug": "ios"
    },
    {
      "matchFileNames": [".github/**", "Gemfile", "doc/Dockerfile"],
      "groupName": "CI dependencies",
      "groupSlug": "ci"
    }
  ]
}
