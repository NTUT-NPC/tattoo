# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

platform :ios do
  desc "Build and upload PR preview to TestFlight"
  lane :upload_pr_preview do |options|
    setup_ci if is_ci

    sync_code_signing(type: "appstore", readonly: is_ci)

    update_code_signing_settings(
      path: "ios/Runner.xcodeproj",
      sdk: "iphoneos*",
      code_sign_identity: "iPhone Distribution",
      profile_name: "match AppStore club.ntut.tattoo",
    )

    archive_path = flutter_build(
      build: "ipa",
      build_number: options[:build_number],
      build_args: ["--no-codesign"],
    )

    build_app(
      skip_build_archive: true,
      archive_path: archive_path,
      export_team_id: ENV["FASTLANE_TEAM_ID"],
    )

    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      changelog: "PR ##{options[:pr_number]}: #{options[:pr_title]}",
    )
  end

  desc "Build and upload official release to TestFlight/App Store"
  lane :upload_main do |options|
    setup_ci if is_ci
    sync_code_signing(type: "appstore", readonly: is_ci)
    
    flutter_build(
      build: "ipa",
      build_number: options[:build_number],
      build_version: options[:build_version]
    )

    upload_to_testflight(
      submit_for_review: true,
      automatic_release: true
    )
  end
end

platform :android do
  # Shared keystore configuration
  def keystore_config
    {
      git_url: ENV["MATCH_GIT_URL"],
      package_name: "club.ntut.tattoo",
      match_secret: ENV["MATCH_PASSWORD"]
    }
  end

  desc "Build and upload PR preview to Firebase App Distribution"
  lane :upload_pr_preview do |options|
    # Sign APK for PR previews so they can be installed as updates
    match_keystore(**keystore_config)

    output_files = flutter_build(
      build: "apk",
      build_number: options[:build_number],
      build_args: "--release"
    )

    firebase_app_distribution(
      app: ENV["FIREBASE_APP_ID_ANDROID"],
      groups: "testers",
      release_notes: "PR ##{options[:pr_number]}: #{options[:pr_title]}",
      apk_path: output_files.first
    )
  end

  desc "Build and upload official release to Google Play Internal Track"
  lane :upload_main do |options|
    match_keystore(**keystore_config)

    output_file = flutter_build(
      build: "appbundle",
      build_number: options[:build_number],
      build_version: options[:build_version],
      build_args: "--release"
    )

    upload_to_play_store(
      track: "internal",
      aab: output_file
    )
  end
end
